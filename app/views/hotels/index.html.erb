<h1>Hotel Details</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Phone</th>
      <th>Email</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.location %></td>
        <td><%= hotel.phone %></td>
        <td><%= hotel.email %></td>        
        <td><%= link_to 'More details', hotel %></td>
          </tr>
    <% end %>
  </tbody>
</table>

<br>

