<!DOCTYPE html>
<html>

<head>
  <title>Hotel</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "rails.validations", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>



<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Hotel</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><%=link_to"Home",pages_path%></li>
      <li><%=link_to "Rooms", rooms_path%></li>
      <li><%=link_to "Make a Booking", new_booking_path%></li>
	  <% if !logged_in?%>
		<li><%=link_to "Sign in", login_path%></li>
	  <% else %>
		<li>Signed in as <%=@current_user.name%>
		<li><%=link_to"Sign Out", logout_path%></li>
	  <% end %>
	  <li><%=link_to "Register", new_user_path%></li>
	  <li><%=link_to"About us", hotels_path%></li>
	  
	 
    </ul>
  </div>
</nav>
  


<%flash.each do |key,value|%>
	<div class = "flash<%=key%>">
		<%=value%>
	</div>
<%end%>

<%= yield %>

</body>
